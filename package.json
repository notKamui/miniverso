{
  "name": "miniverso",
  "private": true,
  "type": "module",
  "version": "1.3.5",
  "scripts": {
    "postinstall": "bun run --env-file=.env postinstall.ts",
    "dev": "cross-env-shell NODE_ENV=development \"bun migrate && vite dev --port 3000\"",
    "start": "bun run --env-file=.env serve.ts",
    "b": "bun run build",
    "build": "cross-env NODE_ENV=production BUILD_ENV=production vite build --mode production",
    "build:entrypoint": "bun build --minify --target=bun --outfile=dist/serve.js --packages=external serve.ts",
    "postbuild": "bun run build:entrypoint",
    "lint": "bunx biome check",
    "lint:fix": "bunx biome check --write",
    "type-check": "bun tsgo --noEmit",
    "check": "bun lint --error-on-warnings && bun type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "migrate": "bun db migrate",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/schema/auth.ts && bun lint:fix ./src/server/db/schema/auth.ts",
    "deploy": "bun check && sh ./deployment/_.deploy.sh",
    "up": "bunx taze@latest major -lI"
  },
  "dependencies": {
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^3.2.13",
    "@epic-web/client-hints": "^1.3.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/query-core": "^5.90.12",
    "@tanstack/react-form": "^1.27.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.139.14",
    "@tanstack/react-router-ssr-query": "^1.139.14",
    "@tanstack/react-start": "^1.139.14",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.0",
    "lucide-react": "^0.556.0",
    "motion": "^12.23.25",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.2.1",
    "react-day-picker": "^9.11.3",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1",
    "resend": "^6.5.2",
    "sonner": "^2.0.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/react-devtools": "^0.8.2",
    "@tanstack/react-form-devtools": "^0.2.4",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-router-devtools": "^1.139.15",
    "@tanstack/router-plugin": "^1.139.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20251206.1",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "0.31.8",
    "jsdom": "^27.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "vite": "npm:rolldown-vite@7.2.10",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.10"
  },
  "engines": {
    "node": ">=25",
    "bun": ">=1.3.3"
  }
}
