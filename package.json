    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "drizzle-kit": "^0.31.1",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3",
    "web-vitals": "^5.0.3"
  },
  "overrides": {
    "@tanstack/react-router": "^1.121.16"
  }
