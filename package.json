{
  "name": "time-recorder",
  "type": "module",
  "scripts": {
    "dev": "bun dev:env -- bunx -b vinxi dev",
    "build": "bun env -- bunx -b vinxi build",
    "start": "bun env -- bunx -b vinxi start",
    "lint": "bunx biome check",
    "lint:fix": "bunx biome check --write",
    "type-check": "bun tsc --noEmit",
    "check": "bun lint && bun type-check",
    "dev:db": "bun dev:env -- bunx drizzle-kit",
    "dev:docker": "docker compose -f docker-compose.dev.yml up -d",
    "env": "dotenvx run -f .env --",
    "dev:env": "dotenvx run -f .env.dev -f .env --overload --"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "dotenvx/dotenvx",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@tanstack/react-router": "^1.85.0",
    "@tanstack/start": "^1.85.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.4",
    "lucide-react": "^0.462.0",
    "postgres": "^3.4.5",
    "react": "^19.0.0-rc.1",
    "react-dom": "^19.0.0-rc.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "vinxi": "^0.4.3",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "trustedDependencies": ["@biomejs/biome", "@parcel/watcher", "esbuild"]
}
