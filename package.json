{
  "name": "miniverso",
  "private": true,
  "type": "module",
  "version": "1.2.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bun migrate && cross-env NODE_ENV=development vite dev --port 3000",
    "start": "bun run --env-file=.env serve.ts",
    "build": "cross-env NODE_ENV=production BUILD_ENV=production vite build",
    "test": "vitest run",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "type-check": "bun tsc --noEmit",
    "check": "bun lint --error-on-warnings && bun type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "migrate": "bun db migrate",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/auth.schema.ts && bun lint:fix ./src/server/db/auth.schema.ts",
    "deploy": "bun check && sh ./deployment/_.deploy.sh"
  },
  "dependencies": {
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^3.2.5",
    "@epic-web/client-hints": "^1.3.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.23.5",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-router": "1.132.41",
    "@tanstack/react-router-ssr-query": "^1.132.41",
    "@tanstack/react-start": "1.132.43",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.3.26",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.6",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.22",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.2.1",
    "resend": "^6.1.2",
    "sonner": "^2.0.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/devtools-vite": "^0.3.3",
    "@tanstack/react-devtools": "^0.7.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router-devtools": "1.132.41",
    "@tanstack/router-plugin": "1.132.41",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.23",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "drizzle-kit": "0.31.5",
    "jsdom": "^27.0.0",
    "vite": "npm:rolldown-vite@latest",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "engines": {
    "node": ">=24",
    "bun": ">=1.2.23"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "core-js",
    "esbuild",
    "tailwindcss"
  ]
}
