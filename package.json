{
  "name": "miniverso",
  "version": "1.9.4",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env-shell NODE_ENV=development \"bun scripts/migrate.ts && vite dev --port 3000\"",
    "start": "bun run --env-file=.env serve.js",
    "b": "bun run build",
    "build": "cross-env NODE_ENV=production BUILD_ENV=production vite build --mode production",
    "build:entrypoint": "bun build --minify --target=bun --outfile=dist/serve.js --packages=external scripts/serve.ts",
    "postbuild": "bun run build:entrypoint",
    "lint": "oxlint --type-aware --deny-warnings",
    "lint:no-types": "oxlint --deny-warnings",
    "fmt": "oxfmt",
    "fix": "bun run fmt && bun run lint --fix",
    "type-check": "tsgo --noEmit",
    "tc": "bun run type-check",
    "check": "bun run lint && bun run fmt --check && bun run type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "migrate": "bun db migrate",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/schema/auth.ts && bun run fix ./src/server/db/schema/auth.ts",
    "deploy": "sh ./deployment/_.deploy.sh",
    "up": "bunx taze@latest major -lI"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^3.3.15",
    "@epic-web/client-hints": "^1.3.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-core": "^0.13.10",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/query-core": "^5.90.20",
    "@tanstack/react-form": "^1.28.3",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.161.3",
    "@tanstack/react-router-ssr-query": "^1.161.3",
    "@tanstack/react-start": "^1.161.3",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.3",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "resend": "^6.9.2",
