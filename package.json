{
  "name": "miniverso",
  "private": true,
  "type": "module",
  "version": "1.3.5",
  "scripts": {
    "postinstall": "if [ \"$NODE_ENV\" != \"production\" ]; then bunx biome migrate --write; fi",
    "dev": "cross-env NODE_ENV=development bun migrate && cross-env NODE_ENV=development vite dev --port 3000",
    "start": "bun run --env-file=.env serve.ts",
    "build": "cross-env NODE_ENV=production BUILD_ENV=production vite build --mode production",
    "build:entrypoint": "bun build --minify --target=bun --outfile=dist/serve.js --packages=external serve.ts",
    "postbuild": "bun run build:entrypoint",
    "lint": "bunx biome check",
    "lint:fix": "bunx biome check --write",
    "type-check": "bun tsgo --noEmit",
    "check": "bun lint --error-on-warnings && bun type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "migrate": "bun db migrate",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/auth.schema.ts && bun lint:fix ./src/server/db/auth.schema.ts",
    "deploy": "bun check && sh ./deployment/_.deploy.sh",
    "up": "bun update -ir"
  },
  "dependencies": {
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^3.2.6",
    "@epic-web/client-hints": "^1.3.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.23.8",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.133.27",
    "@tanstack/react-router-ssr-query": "^1.133.27",
    "@tanstack/react-start": "^1.133.27",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.3.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.546.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.2.0",
    "recharts": "^3.3.0",
    "resend": "^6.2.2",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/devtools-vite": "^0.3.9",
    "@tanstack/react-devtools": "^0.7.7",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router-devtools": "^1.133.27",
    "@tanstack/router-plugin": "^1.133.27",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript/native-preview": "^7.0.0-dev.20251024.1",
    "@vitejs/plugin-react": "^5.1.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "0.31.5",
    "jsdom": "^27.0.1",
    "rolldown-vite": "npm:rolldown-vite@7.1.19",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.19"
  },
  "engines": {
    "node": ">=24",
    "bun": ">=1.3.1"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "core-js",
    "esbuild",
    "tailwindcss"
  ]
}
