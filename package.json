{
  "name": "miniverso",
  "private": true,
  "type": "module",
  "version": "1.1.2",
  "scripts": {
    "dev": "bun migrate && vite dev --port 3000",
    "start": "node --env-file-if-exists=.env .output/server/index.mjs",
    "build": "cross-env NODE_ENV=production BUILD_ENV=production vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "type-check": "bun tsc --noEmit",
    "check": "bun lint --error-on-warnings && bun type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "migrate": "bun db migrate",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/auth.schema.ts && bun lint:fix ./src/server/db/auth.schema.ts",
    "deploy": "bun check && sh ./deployment/_.deploy.sh",
    "postinstall": "biome migrate --write"
  },
  "dependencies": {
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^3.1.9",
    "@epic-web/client-hints": "^1.3.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.20.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-router": "1.131.44",
    "@tanstack/react-router-ssr-query": "^1.131.44",
    "@tanstack/react-start": "1.131.44",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.3.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.13",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-day-picker": "^9.10.0",
    "react-dom": "^19.1.1",
    "recharts": "^3.2.1",
    "resend": "^6.1.0",
    "sonner": "^2.0.7",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-devtools": "^0.6.7",
    "@tanstack/react-query-devtools": "^5.89.0",
    "@tanstack/react-router-devtools": "1.131.44",
    "@tanstack/router-plugin": "1.131.44",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "cross-env": "^10.0.0",
    "drizzle-kit": "0.31.4",
    "jsdom": "^27.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.2.21"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "core-js",
    "esbuild",
    "tailwindcss"
  ]
}
