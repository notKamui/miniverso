{
  "name": "miniverso",
  "private": true,
  "type": "module",
  "version": "1.1.0",
  "scripts": {
    "dev": "vite dev --port 3000",
    "start": "node .output/server/index.mjs",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "type-check": "bun tsc --noEmit",
    "check": "bun lint && bun type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/auth.schema.ts && bun lint:fix ./src/server/db/auth.schema.ts"
  },
  "dependencies": {
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^2.0.7",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@tanstack/react-router": "^1.121.16",
    "@tanstack/react-router-devtools": "^1.121.16",
    "@tanstack/react-router-with-query": "^1.121.16",
    "@tanstack/react-start": "^1.121.16",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-plugin": "^1.121.16",
    "better-auth": "^1.2.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "lucide-react": "^0.515.0",
    "motion": "^12.18.1",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^4.6.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
