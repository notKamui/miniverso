{
  "name": "miniverso",
  "private": true,
  "type": "module",
  "version": "1.1.2",
  "scripts": {
    "dev": "vite dev --port 3000",
    "start": "node --env-file-if-exists=.env .output/server/index.mjs",
    "build": "cross-env NODE_ENV=production BUILD_ENV=production vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "type-check": "bun tsc --noEmit",
    "check": "bun lint --error-on-warnings && bun type-check",
    "dev:docker": "docker compose -f docker-compose.dev.yml",
    "db": "drizzle-kit",
    "auth:secret": "bunx @better-auth/cli@latest secret",
    "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./src/server/db/auth.schema.ts && bun lint:fix ./src/server/db/auth.schema.ts",
    "deploy": "bun check && sh ./deployment/_.deploy.sh"
  },
  "dependencies": {
    "@daveyplate/better-auth-tanstack": "^1.3.6",
    "@daveyplate/better-auth-ui": "^3.0.0",
    "@epic-web/client-hints": "^1.3.7",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.19.1",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-router": "1.131.8",
    "@tanstack/react-router-ssr-query": "^1.131.8",
    "@tanstack/react-start": "1.131.8",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.3.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.4",
    "lucide-react": "^0.539.0",
    "motion": "^12.23.12",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2",
    "resend": "^4.8.0",
    "sonner": "^2.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-devtools": "^0.3.0",
    "@tanstack/react-query-devtools": "^5.85.0",
    "@tanstack/react-router-devtools": "1.131.8",
    "@tanstack/router-plugin": "1.131.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "cross-env": "^10.0.0",
    "drizzle-kit": "0.31.4",
    "jsdom": "^26.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@tanstack/react-router": "1.131.8",
    "vite": "npm:rolldown-vite@latest"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.2.19"
  }
}
