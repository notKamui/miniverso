{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "ignorePatterns": [
    "**/node_modules/**",
    "**/bun.lock",
    "**/src/routeTree.gen.ts",
    "**/.drizzle/**",
    "**/dist/**"
  ]
}
